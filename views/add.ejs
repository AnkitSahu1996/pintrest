<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new post</h1>
    <hr class="opacity-10 mt-2 mb-2 w-1/3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
        <input class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" type="text" placeholder="Title" name="title">
        <textarea cols="10" rows="7" class="text-black block w-1/3 px-3 py-2 border-2 rounded-md mt-2" name="description" placeholder="Description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md bg-red-700 mt-3" type="submit" value="Create Post">
    </form>
</div>
