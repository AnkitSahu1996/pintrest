<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center">
    <div class="w-[30vw] h-[85vh] bg-white px-16 py-10 rounded-[30px]">
      <h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tight">Create New Account</h1>
      <form action="/register" method="post">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="username">
        <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
        <input class="block border-2 rounded-md mt-4 w-full px-3 py-2" type="email" name="email" placeholder="email">
        <input class="block border-2 rounded-md mt-4 w-full px-3 py-2" type="number" name="contact" placeholder="contact">
        <input class="block border-2 rounded-md mt-4 w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="block border-2 mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 text-center mt-3 w-3/4 mx-auto">By continuing, you agree to Pinterest's Terms of Service; 
        </p>
      </form>
      <a class="inline-block mt-2 text-sm font-semibold text-zinc-500 text-center w-full" href="/">Login Existing Account</a>
    </div>
</div>

<% include ./partials/footer.ejs %>